@model bmpt.Models.Music

@{
    ViewData["Title"] = "Detalles de Bandas musicales";
}

<h1>Detalles</h1>

<div>

    <h4>Banda musical</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MusicName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MusicName)
        </dd>
    </dl>
</div>

<div>
    <!-- se cambia model puesto que es el lugar donde se encuentra el id -->
    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@Model.MusicId">Editar</a>
    <a asp-action="Index" class="btn btn-success">Regresar</a>
</div>