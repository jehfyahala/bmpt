@model bmpt.Models.Music

@{
    ViewData["Title"] = "Eliminar una banda musical";
}

<h1>Borrar</h1>
<h3>¿Esta seguro de eliminar esta banda musical?</h3>
<div>
    <h4>Bandas Musicales</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MusicName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MusicName)
        </dd>
    </dl>
</div>

<div>
    <!-- llama al delete para con el post poder eliminar el registro -->
    <form asp-action="Delete">
        <input type="hidden" asp-for="MusicId" />
        <input type="submit" class="btn btn-danger" value="Borrar" />
        <a asp-action="Index" class="btn btn-success">Regresar</a>
    </form>

</div>