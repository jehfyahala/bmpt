@model IEnumerable<bmpt.Models.Music>

@{ 
    ViewData["Title"] = "Bandas musicales";
}

<h2>Lista de bandas musicales</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Nuevo</a>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MusicName)
                </th>
                <th>

                </th>
            </tr>

        </thead>
        <tbody>

            @foreach (var item in Model)
            {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.MusicName)</td>
                <td>
                    <a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.MusicId">Editar</a>
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.MusicId">Detalles</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.MusicId">Eliminar</a>
                </td>
            </tr>
            }

        </tbody>
    </table>
</p>